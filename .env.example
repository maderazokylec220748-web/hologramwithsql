# Database configuration
DATABASE_URL=mysql://root@localhost:3306/hologram

# Alternative database configuration (for express-mysql-session)
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=
DATABASE_NAME=hologram

# Groq API configuration (get your key from https://console.groq.com/keys)
GROQ_API_KEY=your_groq_api_key_here

# Server configuration
PORT=5001
NODE_ENV=development

# Session secret (GENERATE A RANDOM SECRET - DO NOT USE DEFAULT)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=generate_your_own_secret_here

# Data Retention Policy (Privacy & GDPR Compliance)
# Shorter retention = better privacy, but less historical data
# Adjust based on your organization's data retention requirements

# Query retention (user questions/answers) - Default: 7 days
# Contains potentially sensitive user inquiries
QUERY_RETENTION_DAYS=7

# Chat history retention (conversation logs) - Default: 7 days
# Most sensitive data - shortest retention recommended
CHAT_RETENTION_DAYS=7

# Analytics retention (aggregated usage data) - Default: 30 days
# Less sensitive, useful for trends and reporting
ANALYTICS_RETENTION_DAYS=30

# Feedback retention (user ratings/comments) - Default: 90 days
# Least sensitive, useful for long-term improvements
FEEDBACK_RETENTION_DAYS=90
